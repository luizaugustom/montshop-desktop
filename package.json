{
  "name": "montshop-desktop",
  "version": "1.0.0",
  "description": "MontShop Desktop - Sistema de gerenciamento de lojas",
  "main": "dist-electron/main.js",
  "author": {
    "name": "MontShop",
    "email": "contato@montshop.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "clean": "node scripts/clean-build.js",
    "prebuild": "npm run clean && node scripts/convert-icon-simple.js",
    "prebuild:win": "npm run clean && node scripts/convert-icon-simple.js",
    "prebuild:mac": "npm run clean && node scripts/convert-icon-simple.js",
    "prebuild:linux": "npm run clean && node scripts/convert-icon-simple.js",
    "build": "tsc && NODE_ENV=production vite build && electron-builder",
    "build:win": "tsc && cross-env NODE_ENV=production vite build && electron-builder --win",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "preview": "vite preview",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "electron:build": "tsc && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-query": "^5.8.4",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "lucide-react": "^0.294.0",
    "node-machine-id": "^1.1.12",
    "node-thermal-printer": "^4.4.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.15.4",
    "serialport": "^12.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "usb": "^2.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.montshop.desktop",
    "productName": "MontShop Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "public/logo.png"
    ],
    "extraFiles": [
      {
        "from": "public/logo.png",
        "to": "resources/logo.png",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.png",
      "publisherName": "MontShop",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MontShop Desktop",
      "include": "build/installer.nsh",
      "artifactName": "MontShop-Desktop-Setup-${version}.${ext}",
      "installerIcon": "public/logo.png",
      "uninstallerIcon": "public/logo.png",
      "installerHeaderIcon": "public/logo.png",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/logo.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "seu-usuario",
      "repo": "montshop-desktop",
      "releaseType": "release",
      "private": false
    },
    "appUpdater": {
      "autoDownload": true,
      "autoInstallOnAppQuit": true
    }
  }
}
